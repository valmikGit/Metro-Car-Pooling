pipeline {
    agent any

    parameters {
        string(name: 'GIT_COMMIT', defaultValue: '', description: 'Commit SHA passed from master pipeline')
        string(name: 'TRIGGERED_BY', defaultValue: 'manual', description: 'Source of trigger')
    }

    environment {
        DOCKERHUB_CREDS = credentials('dockerhub-creds')
        DOCKER_IMAGE = "${DOCKERHUB_CREDS_USR}/frontend_microservice:latest"
        EMAIL_IDS_TO_SEND = "vaibhav.bajoriya@iiitb.ac.in"
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/valmikGit/Metro-Car-Pooling.git'
            }
        }

        // stage('Install Dependencies') {
        //     steps {
        //         echo "Installing npm dependencies..."
        //         dir('frontend') {
        //             sh "npm ci"
        //         }
        //     }
        // }

        // stage('Build') {
        //     steps {
        //         echo "Building Next.js application..."
        //         dir('frontend') {
        //             sh "npm run build"
        //         }
        //     }
        // }

        stage('Docker Build') {
            steps {
                echo "Building Docker image..."
                sh "docker build -t ${DOCKER_IMAGE} frontend/"
            }
        }

        stage('Push Docker Image') {
            steps {
                echo "Pushing to DockerHub..."
                sh "echo ${DOCKERHUB_CREDS_PSW} | docker login -u ${DOCKERHUB_CREDS_USR} --password-stdin"
                sh "docker push ${DOCKER_IMAGE}"
            }
        }

        stage('Deploy to K8s') {
            steps {
                echo "Deploying to Kubernetes (Minikube)..."
                // Ensure we're using minikube context
                sh "kubectl config use-context minikube || echo 'Using current context'"
                // Apply K8s manifests
                sh "kubectl apply -f k8s/frontend-deployment.yaml"
            }
        }

        stage('Verify Deployment') {
            steps {
                echo "Verifying deployment..."
                sh "kubectl rollout status deployment/frontend-service -n metro --timeout=180s"
                echo "Frontend deployment successful!"
            }
        }
    }

    post {
        success {
            echo "Successfully executed the frontend pipeline"
            emailext(
                to: "${EMAIL_IDS_TO_SEND}",
                subject: "SUCCESS: Frontend Pipeline #${env.BUILD_NUMBER}",
                body: """
                <b>Build successful!</b><br>
                Job: ${env.JOB_NAME}<br>
                Build Number: ${env.BUILD_NUMBER}<br>
                Triggered By: ${params.TRIGGERED_BY}<br>
                URL: <a href="${env.BUILD_URL}">${env.BUILD_URL}</a>
                """,
                mimeType: 'text/html'
            )
        }
        failure {
            echo "Failed to execute the frontend pipeline"
            emailext(
                to: "${EMAIL_IDS_TO_SEND}",
                subject: "FAILURE: Frontend Pipeline #${env.BUILD_NUMBER}",
                body: """
                <b>Build failed!</b><br>
                Job: ${env.JOB_NAME}<br>
                Build Number: ${env.BUILD_NUMBER}<br>
                Triggered By: ${params.TRIGGERED_BY}<br>
                URL: <a href="${env.BUILD_URL}">${env.BUILD_URL}</a>
                """,
                mimeType: 'text/html'
            )
        }
        cleanup {
            cleanWs()
        }
    }
}
