pipeline {
    agent any

    parameters {
        string(name: 'GIT_COMMIT', defaultValue: '', description: 'Commit SHA passed from master pipeline')
        string(name: 'TRIGGERED_BY', defaultValue: 'manual', description: 'Source of trigger')
    }

    environment {
        DOCKERHUB_CREDS = credentials('dockerhub-creds')
        IMAGE_NAME = "gateway_microservice"
        IMAGE_TAG = "latest"
        DOCKER_IMAGE = "${DOCKERHUB_CREDS_USR}/${IMAGE_NAME}:${IMAGE_TAG}"
        EMAIL_IDS_TO_SEND = "valmik.belgaonkar@iiitb.ac.in"
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/valmikGit/Metro-Car-Pooling.git'
            }
        }

        stage('Build') {
            steps {
                echo "Cleaning Lombok from local Maven repository to force fresh download..."
                sh "rm -rf ~/.m2/repository/org/projectlombok"
                echo "Building gateway with Maven..."
                sh "mvn -f gateway/pom.xml clean package -DskipTests"
            }
        }

        stage('Test') {
            steps {
                echo "Running unit tests..."
                sh "mvn -f gateway/pom.xml test"
            }
        }

        stage('Docker Build') {
            steps {
                echo "Building Docker image..."
                sh "docker build -f gateway/Dockerfile -t ${DOCKER_IMAGE} ."
            }
        }

        stage('Push Docker Image') {
            steps {
                echo "Pushing to DockerHub..."
                sh "echo ${DOCKERHUB_CREDS_PSW} | docker login -u ${DOCKERHUB_CREDS_USR} --password-stdin"
                sh "docker push ${DOCKER_IMAGE}"
            }
        }

        stage('Deploy to K8s') {
            steps {
                echo "Deploying to Kubernetes (Minikube)..."
                sh "kubectl config use-context minikube || echo 'Using current context'"
                sh "kubectl apply -f k8s/gateway-deployment.yaml"
            }
        }

        stage('Verify Deployment') {
            steps {
                echo "Verifying deployment..."
                sh "kubectl rollout status deployment/gateway-service -n metro --timeout=180s"
                echo "Gateway service deployment successful!"
            }
        }
    }

    post {
        success {
            echo "Successfully executed the gateway pipeline"
            // emailext(
            //     to: "${EMAIL_IDS_TO_SEND}",
            //     subject: "SUCCESS: Gateway Pipeline #${env.BUILD_NUMBER}",
            //     body: """
            //     <b>Build successful!</b><br>
            //     Job: ${env.JOB_NAME}<br>
            //     Build Number: ${env.BUILD_NUMBER}<br>
            //     Triggered By: ${params.TRIGGERED_BY}<br>
            //     URL: <a href="${env.BUILD_URL}">${env.BUILD_URL}</a>
            //     """,
            //     mimeType: 'text/html'
            // )
        }
        failure {
            echo "Failed to execute the gateway pipeline"
            // emailext(
            //     to: "${EMAIL_IDS_TO_SEND}",
            //     subject: "FAILURE: Gateway Pipeline #${env.BUILD_NUMBER}",
            //     body: """
            //     <b>Build failed!</b><br>
            //     Job: ${env.JOB_NAME}<br>
            //     Build Number: ${env.BUILD_NUMBER}<br>
            //     Triggered By: ${params.TRIGGERED_BY}<br>
            //     URL: <a href="${env.BUILD_URL}">${env.BUILD_URL}</a>
            //     """,
            //     mimeType: 'text/html'
            // )
        }
        cleanup {
            cleanWs()
        }
    }
}