pipeline {
    agent any

    parameters {
        string(name: 'GIT_COMMIT', defaultValue: '', description: 'Commit SHA passed from master pipeline')
        string(name: 'TRIGGERED_BY', defaultValue: 'manual', description: 'Source of trigger')
    }

    environment {
        DOCKERHUB_CREDS = credentials('dockerhub-creds')
        IMAGE_NAME = "notification_microservice"
        IMAGE_TAG = "latest"
        DOCKER_IMAGE = "${DOCKERHUB_CREDS_USR}/${IMAGE_NAME}:${IMAGE_TAG}"
        EMAIL_IDS_TO_SEND = ""
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/valmikGit/Metro-Car-Pooling.git'
            }
        }

        stage('Build') {
            steps {
                echo "Building notification with Maven..."
                sh "mvn -f notification/pom.xml clean package -DskipTests"
            }
        }

        stage('Test') {
            steps {
                echo "Running unit tests..."
                sh "mvn -f notification/pom.xml test"
            }
        }

        stage('Docker Build') {
            steps {
                echo "Building Docker image..."
                sh "docker build -t ${DOCKER_IMAGE} notification/"
            }
        }

        stage('Push Docker Image') {
            steps {
                echo "Pushing to DockerHub..."
                sh "echo ${DOCKERHUB_CREDS_PSW} | docker login -u ${DOCKERHUB_CREDS_USR} --password-stdin"
                sh "docker push ${DOCKER_IMAGE}"
            }
        }

        stage('Deploy to K8s') {
            steps {
                echo "Deploying to Kubernetes (Minikube)..."
                sh "kubectl config use-context minikube || echo 'Using current context'"
                sh "sed -i 's|notification_microservice:latest|${DOCKER_IMAGE}|g' k8s/notification-deployment.yaml"
                sh "kubectl apply -f k8s/notification-deployment.yaml"
            }
        }

        stage('Verify Deployment') {
            steps {
                echo "Verifying deployment..."
                sh "kubectl rollout status deployment/notification-service -n metro --timeout=180s"
                echo "Notification service deployment successful!"
            }
        }
    }

    post {
        success {
            echo "Successfully executed the notification pipeline"
            emailext(
                to: "${EMAIL_IDS_TO_SEND}",
                subject: "SUCCESS: Notification Pipeline #${env.BUILD_NUMBER}",
                body: """
                <b>Build successful!</b><br>
                Job: ${env.JOB_NAME}<br>
                Build Number: ${env.BUILD_NUMBER}<br>
                Triggered By: ${params.TRIGGERED_BY}<br>
                URL: <a href="${env.BUILD_URL}">${env.BUILD_URL}</a>
                """,
                mimeType: 'text/html'
            )
        }
        failure {
            echo "Failed to execute the notification pipeline"
            emailext(
                to: "${EMAIL_IDS_TO_SEND}",
                subject: "FAILURE: Notification Pipeline #${env.BUILD_NUMBER}",
                body: """
                <b>Build failed!</b><br>
                Job: ${env.JOB_NAME}<br>
                Build Number: ${env.BUILD_NUMBER}<br>
                Triggered By: ${params.TRIGGERED_BY}<br>
                URL: <a href="${env.BUILD_URL}">${env.BUILD_URL}</a>
                """,
                mimeType: 'text/html'
            )
        }
        cleanup {
            cleanWs()
        }
    }
}