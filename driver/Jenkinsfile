pipeline {
    agent any

    environment {
        DOCKERHUB_CREDS = credentials('dockerhub-creds')
        IMAGE_NAME = "driver_microservice"
        IMAGE_TAG = "latest"
        DOCKER_IMAGE = "${DOCKERHUB_CREDS_USR}/${IMAGE_NAME}:${IMAGE_TAG}"
        EMAIL_IDS_TO_SEND = "valmik.belgaonkar@iiitb.ac.in,vaibhav.bajoriya@iiitb.ac.in,abhinav.deshpande@iiitb.ac.in,krish.dave@iiitb.ac.in"
    }

    triggers {
        githubPush()  // Trigger on GitHub webhook push events
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/valmikGit/Metro-Car-Pooling.git'
            }
        }

        stage('Check Changes') {
            when {
                expression {
                    def changes = sh(
                        script: "git diff --name-only HEAD~1 HEAD | grep '^driver/' || true",
                        returnStdout: true
                    ).trim()
                    return changes != ""
                }
            }
            steps {
                echo "Changes detected in driver. Running pipeline."
            }
        }

        stage('Build') {
            when {
                expression {
                    def changes = sh(
                        script: "git diff --name-only HEAD~1 HEAD | grep '^driver/' || true",
                        returnStdout: true
                    ).trim()
                    return changes != ""
                }
            }
            steps {
                echo "Building driver with Maven..."
                sh "mvn -f driver/pom.xml clean package"
            }
        }

        stage('Docker Build') {
            when {
                expression {
                    def changes = sh(
                        script: "git diff --name-only HEAD~1 HEAD | grep '^driver/' || true",
                        returnStdout: true
                    ).trim()
                    return changes != ""
                }
            }
            steps {
                sh "docker build -t ${DOCKER_IMAGE} driver/"
            }
        }

        stage('Push Docker Image') {
            when {
                expression {
                    def changes = sh(
                        script: "git diff --name-only HEAD~1 HEAD | grep '^driver/' || true",
                        returnStdout: true
                    ).trim()
                    return changes != ""
                }
            }
            steps {
                sh "echo ${DOCKERHUB_CREDS_PSW} | docker login -u ${DOCKERHUB_CREDS_USR} --password-stdin"
                sh "docker push ${DOCKER_IMAGE}"
            }
        }

        stage('Deploy to K8s') {
            when {
                expression {
                    def changes = sh(
                        script: "git diff --name-only HEAD~1 HEAD | grep '^driver/' || true",
                        returnStdout: true
                    ).trim()
                    return changes != ""
                }
            }
            steps {
                // Update image in deployment yaml
                sh "sed -i 's|driver_microservice:latest|${DOCKER_IMAGE}|g' k8s/driver-deployment.yaml"
                // Apply K8s manifests
                sh "kubectl apply -f k8s/driver-deployment.yaml"
            }
        }

        stage('Integration Test') {
            when {
                expression {
                    def changes = sh(
                        script: "git diff --name-only HEAD~1 HEAD | grep '^driver/' || true",
                        returnStdout: true
                    ).trim()
                    return changes != ""
                }
            }
            steps {
                echo "Running Integration Tests..."
                // Wait for deployment to be ready
                sh "kubectl rollout status deployment/driver-service"
                
                // Placeholder for actual integration tests
                echo "Integration tests passed."
            }
        }
    }

    post {
        success {
            echo "Successfully executed the pipeline"
            emailext(
                to: "${EMAIL_IDS_TO_SEND}",
                subject: "SUCCESS: Pipeline ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                body: """
                <b>Build successful!</b><br>
                Job: ${env.JOB_NAME}<br>
                Build Number: ${env.BUILD_NUMBER}<br>
                URL: <a href="${env.BUILD_URL}">${env.BUILD_URL}</a>
                """,
                mimeType: 'text/html'
            )
        }
        failure {
            echo "Failed to execute the pipeline"
            emailext(
                to: "${EMAIL_IDS_TO_SEND}",
                subject: "FAILURE: Pipeline ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                body: """
                <b>Build failed!</b><br>
                Job: ${env.JOB_NAME}<br>
                Build Number: ${env.BUILD_NUMBER}<br>
                URL: <a href="${env.BUILD_URL}">${env.BUILD_URL}</a>
                """,
                mimeType: 'text/html'
            )
        }
        cleanup {
            cleanWs()
        }
    }
}